<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionPage"
    android:id="@+id/fragmentSelectionPage"
    >

    <TextView
        android:id="@+id/tvSelectionPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select bus &amp; stop where you want to get it"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:textAlignment="center"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/llStopSelection"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectionPage">

        <TextView
            android:id="@+id/tvStopSelection"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Stop: "
            android:textSize="20sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSelectStopSelection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="Select"
            android:textSize="20sp"
            android:layout_weight="10" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llBusSelection"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llStopSelection">

        <TextView
            android:id="@+id/tvBusSelection"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bus: "
            android:textSize="20sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSelectBusSelection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="Select"
            android:textSize="20sp"
            android:layout_weight="10" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDeparturetimeSelection"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llBusSelection">

        <TextView
            android:id="@+id/tvDeparturetimeSelection"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Departuretime: "
            android:textSize="20sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSelectDeparturetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="Select"
            android:textSize="20sp"
            android:layout_weight="10" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>