<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDeparturetimeSelectionPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Departuretime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:textAlignment="center"
        android:padding="20dp"/>

    <LinearLayout
        android:id="@+id/llDeparturetimeSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvDeparturetimeSelectionPage">

        <TextView
            android:id="@+id/tvDeparturetimeSelection"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bus: "
            android:textSize="20sp"
            android:layout_weight="1" />


        <TimePicker
            android:id="@+id/tpDeparturetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:hint="Select departuretime ..."
            android:textSize="20sp"
            android:layout_weight="10"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnSaveDeparturetime"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Save Bus"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>